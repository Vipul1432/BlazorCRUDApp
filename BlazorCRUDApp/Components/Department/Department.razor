@page "/department"
@inherits DepartmentList


<h2 class="text-center">Departments List</h2>
<div class="d-flex justify-content-center">
    <hr class="w-25" />
</div>

<a class="btn btn-sm btn-primary mb-3" href="/department/new"><i class="bi bi-plus-circle"></i> Department</a>

@if (Departments == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr class="text-center table-dark">
                <th>Sr. No.</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Departments)
            {
                <tr class="text-center">
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>
                        <a href="/department/@department.Id" class="btn btn-sm btn-warning">Edit</a>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteDepartment(department.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
